<%=form_tag :login, :method=>:post, :role=>"form", :class=>"login" do %>
  <h3>Login now</h3>
  <% if flash[:notice]  %>
    <div class="alert alert-warning">
      <%= flash[:notice]  %>
    </div>
  <% end %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, :class=>"form-control" %>

  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= submit_tag "Login", :class=>"form-control" %>
  </div>
  <%= link_to "or register now", :register %>
<% end %>

<p>
  For demo, login using:
<table class="table">
  <tr><td>Email</td><td>demo@geek-reader.com</td></tr>
  <tr><td>Password</td><td>demo</td></tr>
</table>
</p>
